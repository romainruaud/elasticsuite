<indices xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:noNamespaceSchemaLocation="urn:magento:module:Smile_ElasticsuiteCore:etc/elasticsuite_indices.xsd">

    <index identifier="catalog_product" defaultSearchType="product">
        <type name="product" idFieldName="entity_id">
            <mapping>
                <field name="category.is_virtual" type="boolean" nestedPath="category" />
                <field name="category.is_blacklisted" type="boolean" nestedPath="category" />
            </mapping>
        </type>
    </index>

    <index identifier="virtual_category" defaultSearchType="_doc">
        <type name="_doc" idFieldName="_category.id">
            <mapping>
                <!-- Static fields handled by the base indexer (not datasource) -->
                <field name="_category.id" type="integer" />
                <!-- the field cannot be simply "name" because it is already used in the "product" index type -->
                <field name="_category.name" type="text" />

                <!-- Static fields handled by the "percolator" datasource -->
                <field name="_category.percolator_type" type="text" />
                <field name="_category.query" type="percolator" />
            </mapping>
        </type>
    </index>

</indices>
